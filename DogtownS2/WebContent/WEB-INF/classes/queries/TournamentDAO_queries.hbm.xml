<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping>
	<query name="retrieveAllTournaments"><![CDATA[
		  from com.dogtown.domain.tournament.Tournament as tournament
	]]></query>	
	<query name="retrieveTournamentById"><![CDATA[
		  from com.dogtown.domain.tournament.Tournament as tournament
		 where tournament.id = :id
	]]></query>		
</hibernate-mapping>